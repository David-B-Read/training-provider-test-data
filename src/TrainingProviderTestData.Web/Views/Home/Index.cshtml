
@{
    ViewData["Title"] = "Training Provider Test Data";
}

<h1>Upload data files</h1>

<form asp-controller="Upload" asp-action="UploadUkrlp" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload UKRLP Stakeholder Report:</p>
            <input type="file" name="files" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

